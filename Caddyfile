{
	email {env.ACME_EMAIL}
}

(porkbun_tls) {
	tls {
		dns porkbun {
			api_key {env.PORKBUN_API_KEY}
			api_secret_key {env.PORKBUN_API_SECRET_KEY}
		}
		resolvers 8.8.8.8 8.8.4.4
	}
}

health.trly.dev {
	reverse_proxy localhost:8000
	import porkbun_tls
}

trly.dev {
	respond "Hello, world!"
	import porkbun_tls
}
